---
import Footer from "../components/Footer.astro";
import Header from "../components/Head.astro";
import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Header title={title} />

  <body
    class="bg-slate-200 text-black dark:text-white dark:bg-slate-900 transition-colors duration-400"
  >
    <NavBar />

    <main class="flex justify-center items-start">
      <div class="max-w-2xl flex flex-col justify-start px-4 pt-20 space-y-4">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>
